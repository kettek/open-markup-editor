{
  "name": "open-markup-editor",
  "version": "1.0.0",
  "description": "Pluggable markup editor",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps && submodules-install"
  },
  "submodules": [
    "render-packs/*",
    "editor-packs/*",
    "markup-packs/*",
    "extensions/*"
  ],
  "keywords": [
    "markup",
    "markdown",
    "editor",
    "plugins",
    "pluggable"
  ],
  "author": "kts of kettek",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^1.8.8",
    "electron-builder": "^20.13.3"
  },
  "dependencies": {
    "electron-app-settings": "^1.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.14",
    "mithril": "^1.1.6",
    "rimraf": "^2.6.2",
    "submodules-install": "^1.0.0",
    "tar": "^4.4.4"
  },
  "build": {
    "appId": "net.kettek.ome",
    "productName": "Open Markup Editor",
    "copyright": "Copyright Â© 2018 Ketchetwahmeegwun T. Southall",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}
